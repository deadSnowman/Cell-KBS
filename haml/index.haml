                %option iNQ
                %option T-Mobile
                %option HP
                %option Apple

            .form-group
              %label{:for => "cellform"} Name
              %select.form-control
                %option -----

            .form-group
              %label{:for => "cellform"} URL
              %select.form-control
                %option -----

            .form-group
              %label{:for => "cellform"} OS
              %select.form-control
                %option -----

            .form-group
              %label{:for => "cellform"} Resolution
              %select.form-control
                %option -----
                %option 640 x 1136 pixels
                %option 480 x 800 pixels
                %option 800 x 1280 pixels

            .form-group
              %label{:for => "cellform"} Primary Camera
              %select.form-control
                %option -----

            .form-group
              %label{:for => "cellform"} Secondary Camera
              %select.form-control
                %option -----

            .form-group
              %label{:for => "cellform"} Storage
              %select.form-control
                %option -----
                %option 16 GB
                %option 32 GB
                %option 64 GB
                %option 128 GB

            .form-group
              %label{:for => "cellform"} Memory
              %select.form-control
                %option -----
                %option 1GB RAM
                %option 2GB RAM

            .form-group
              %label{:for => "cellform"} Mem Card Slot
              %select.form-control
                %option -----

            .form-group
              %label{:for => "cellform"} Talk time
              %select.form-control
                %option -----

            .form-group
              %label{:for => "cellform"} Loudspeaker
              %select.form-control
                %option -----

            .form-group
              %label{:for => "cellform"} 3.5mm Jack
              %select.form-control
                %option -----

            %button.btn.btn-primary{:type => "submit"} Submit

